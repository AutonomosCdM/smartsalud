# Application
APP_NAME=smartSalud_V2
APP_ENV=development
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://smartsalud_user:smartsalud_pass@localhost:5432/smartsalud_v2

# Redis
REDIS_URL=redis://localhost:6379/0

# Groq API (NLP)
GROQ_API_KEY=gsk_your_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TIMEOUT=5.0

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_CONTENT_SID_CONFIRMATION=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS_FILE=token.json
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar

# Scheduler
REMINDER_SCHEDULE_HOUR=9
REMINDER_SCHEDULE_MINUTE=0
REMINDER_DAYS_AHEAD=1

# Monitoring
ENABLE_DASHBOARD=true
DASHBOARD_PATH=/dashboard
